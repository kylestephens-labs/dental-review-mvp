{
  "name": "dental-review-engine-backend",
  "version": "1.0.0",
  "description": "Backend API for Dental Review Engine MVP",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ --ext .ts,.js --max-warnings 0",
    "lint:fix": "eslint src/ --ext .ts,.js --max-warnings 0 --fix",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build completed successfully'",
    "docker:build": "docker build -t dental-mvp-backend ..",
    "docker:run": "docker run -p 3001:3001 dental-mvp-backend",
    "docker:test": "docker run --rm dental-mvp-backend npm test",
    "health:check": "curl -f http://localhost:3001/healthz || exit 1",
    "env:validate": "tsx src/scripts/validateEnv.ts",
    "env:check": "npm run env:validate && echo 'Environment validation completed'",
    "deps:check": "npm audit --audit-level=moderate",
    "deps:update": "npm update",
    "deps:outdated": "npm outdated"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.908.0",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "stripe": "^14.25.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.16.5",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.32.0",
    "node-mocks-http": "^1.15.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  }
}
